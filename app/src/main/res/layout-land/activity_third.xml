<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.android.elizaveta.taxi.ThirdActivity">

    <TextView
        android:id="@+id/textViewPointTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Point to:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewPointFrom" />

    <TextView
        android:id="@+id/textViewPointFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Point from:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewPointTo"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/textViewPointTo"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewStreetTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Street:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextStreetTo"
        app:layout_constraintRight_toLeftOf="@+id/editTextStreetTo"
        app:layout_constraintLeft_toRightOf="@+id/editTextStreetFrom" />

    <TextView
        android:id="@+id/textViewHouseTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="House:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextHouseTo"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/editTextHouseTo"
        app:layout_constraintLeft_toRightOf="@+id/editTextHouseFrom" />

    <TextView
        android:id="@+id/textViewFlatTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Flat:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextFlatTo"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/editTextFlatTo"
        app:layout_constraintLeft_toRightOf="@+id/editTextFlatFrom" />

    <TextView
        android:id="@+id/textViewStreetFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Street:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextStreetFrom"
        app:layout_constraintRight_toLeftOf="@+id/editTextStreetFrom"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewHouseFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="House:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextHouseFrom"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/editTextHouseFrom"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewFlatFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Flat:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextFlatFrom"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/editTextFlatFrom"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editTextHouseTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewHouseTo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextStreetTo" />

    <EditText
        android:id="@+id/editTextHouseFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewHouseTo"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toLeftOf="@+id/textViewHouseTo"
        app:layout_constraintLeft_toRightOf="@+id/textViewHouseFrom" />

    <EditText
        android:id="@+id/editTextStreetFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewStreetTo"
        app:layout_constraintRight_toLeftOf="@+id/textViewStreetTo"
        app:layout_constraintLeft_toRightOf="@+id/textViewStreetFrom" />

    <EditText
        android:id="@+id/editTextFlatFrom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewFlatTo"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toLeftOf="@+id/textViewFlatTo"
        app:layout_constraintLeft_toRightOf="@+id/textViewFlatFrom" />

    <EditText
        android:id="@+id/editTextFlatTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewFlatTo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextHouseTo" />

    <EditText
        android:id="@+id/editTextStreetTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textViewStreetTo"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPointTo" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="OK"
        android:textColor="@android:color/background_dark"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextFlatFrom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
